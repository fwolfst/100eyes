<%= c 'page' do %>
  <%= c 'page_title' do %>
    <%= @request.title %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <%= c 'box', styles: [:gray, :small] do %>
        <%= c 'plaintext_message', message: @request.text %>
      <% end %>

      <%= c 'stack' do %>
        <%= c 'heading', styles: [:section] do %>
          <%= I18n.t 'request.replies' %>
        <% end %>

        <% if @replies.blank? %>
          <%= c 'empty_state' do %>
            <%= I18n.t 'request.no_replies' %>
          <% end %>
        <% end %>

        <% @replies.each do |reply| %>
          <%= c 'excerpt',
            title: reply.user.name,
            date: reply.created_at,
            text: reply.text,
            link: user_request_path(id: reply.request.id, user_id: reply.user.id,)
          %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
