<!DOCTYPE html>
<html>
  <head>
    <title>100eyes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
  </head>

  <body>
    <%= c 'nav_bar' %>

    <%= flash.notice %>

    <% flash.each do |type, message| %>
      <%= c 'notification', styles: [type] do %>
        <%= message %>
      <% end %>
    <% end %>

    <%= yield %>

    <%= javascript_pack_tag 'application' %>
  </body>
</html>
