<%= c 'page' do %>
  <%= c 'page_title' do |c| %>
    <%= I18n.t 'request.request', count: :many %>

    <% c.with(:actions) do %>
      <%= c 'button',
        label: I18n.t('request.create'),
        link: new_request_path
      %>
    <% end %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <% @requests.each do |request| %>
        <%= c 'excerpt',
          title: request.title,
          text: request.text,
          link: request_path(request),
          date: request.created_at
        %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
