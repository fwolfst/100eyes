<%= c 'page' do %>

  <%= c 'page_title' do |c| %>
    <%= I18n.t 'user.user', count: :many %>

    <% c.with(:actions) do %>
      <%= c 'button',
        label: I18n.t('user.create'),
        link: new_user_path
      %>
    <% end %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack' do %>
      <% @users.each do |user| %>
        <%= c 'user_row', user: user %>
      <% end %>
    <% end %>
  <% end %>

<% end %>
