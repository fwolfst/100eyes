<%= c 'page' do %>
  <%= c 'page_title' do %>
    <%= @user.name %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <%= c 'user_form', user: @user %>

      <%= c 'stack' do %>
        <%= c 'heading', styles: [:section] do %>
          <%= I18n.t 'user.activity' %>
        <% end %>

        <%= c 'requests_feed' do %>
          <% @user.replies_by_request.each do |request, replies| %>
            <%= c 'requests_feed_item', user: @user, request: request, first_answer: replies.first %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
