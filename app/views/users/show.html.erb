<%= c 'page' do %>
  <%= c 'page_title' do %>
    <%= I18n.t 'contributor.contributor', count: 1 %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <%= c 'user_row', user: @user %>

      <%= c 'stack' do %>
        <%= c 'heading', styles: [:section] do %>
          <%= I18n.t 'contributor.answered_requests' %>
        <% end %>

        <% @user.requests.uniq.each do |request| %>
          <%= c 'excerpt',
            title: request.title,
            text: request.text,
            date: request.created_at,
            link: user_request_path(id: request.id, user_id: @user.id)
          %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
