<%= c 'page_wrapper' do %>
  <h1>Alle Nachrichtenverläufe mit <%= @user.name %></h1>
  <ul>
  <% @user.requests.uniq.each do |request| %>
    <li>
      <%= c 'button', label: request.text, styles: ['link'], link: user_request_path(@user, request)%>
    </li>
  <% end %>
  </ul>

  <%= c 'button', label: 'Zurück zur Benutzer-Liste', link: users_path %>
<% end %>
