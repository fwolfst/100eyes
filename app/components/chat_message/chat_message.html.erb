<div class="ChatMessage" data-controller="chat-message">
  <% unless photos.empty? %>
    <div class="ChatMessage-photos">
      <% photos.each do |photo| %>
        <img src="<%= url_for(photo.image) %>" alt="">
      <% end %>
    </div>
  <% end %>
  <div class="ChatMessage-text" data-target="chat-message.text">
    <%= c 'plaintext_message', message: message.text %>

    <div
      class="ChatMessage-expand"
      data-target="chat-message.expand"
      data-action="click->chat-message#expand"
    >
      <%= c 'button', styles: [:inline], label: 'weiterlesen' %>
    </div>
  </div>
  <div class="ChatMessage-date">
    <%= date_time(message.created_at) %>
  </div>
</div>
