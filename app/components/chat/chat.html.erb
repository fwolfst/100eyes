<div class="Chat">
  <%= c 'stack' do %>
    <%= c 'user_row', user: user %>
    <div class="Chat-messages">
      <%= c 'stack' do %>
        <% messages.each do |message| %>
          <%= c 'chat_row', message: message %>
        <% end %>
      <% end %>
    </div>
    <%= c 'stack' do %>
      <%= c 'chat_form', user: user %>
    <% end %>
  <% end %>
</div>
