<%= c 'page' do %>
  <%= c 'page_title' do %>
    <%= I18n.t 'search.result', count: :many %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <% @results.each do |result| %>
        <%= c 'search_result', result: result %>
      <% end %>

      <%= c 'button', label: 'Zurück zur Übersicht', link: root_path %>
    <% end %>
  <% end %>
<% end %>
