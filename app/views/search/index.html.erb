<%= c 'page_wrapper' do %>
  <%= c 'page_header', title: 'Suche' %>

  <%= form_with url: search_path, local: true, method: :get do %>
    <%= c 'input', id: 'q', required: true, placeholder: 'Suchen' %>
    <%= c 'button', type: 'submit', label: 'Suche starten' %>
  <% end %>

  <% @results.each do |result| %>
    <%= c 'search_result_component', result: result %>
  <% end %>

  <%= link_to 'Zurück zur Übersicht', :dashboard %>
<% end %>
