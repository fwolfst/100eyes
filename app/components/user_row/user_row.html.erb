<tr class="UserRow">
    <td class="UserRow-avatar">
        <%= c 'avatar', url: user.avatar_url, key: user.id %>
    </td>
    <td class="UserRow-main">
        <div class="UserRow-name">
            <%= user.name %>
        </div>
        <div class="UserRow-note">
            <%= user.note %>
        </div>
    </td>
    <td class="UserRow-contact">
      <% if user.email %>
        <%= c 'button', styles: ['link'], label: user.email, link: "mailto:#{user.email}" %>
      <% end %>
      <% if user.username %>
        <%= c 'button', styles: ['link'], label: user.username, link: "https://t.me/#{user.username}" %>
      <% end %>
    </td>
    <td class="UserRow-actions">
        <%= c 'button', styles: ['link'], label: 'Verlauf anzeigen', link: user_path(user) %>
    </td>
    <td class="UserRow-actions">
        <%= c 'button', styles: ['link'], label: 'Bearbeiten', link: edit_user_path(user) %>
    </td>
</tr>
