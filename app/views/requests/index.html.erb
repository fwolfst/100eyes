<%= c 'page' do %>
  <%= c 'page_title' do %>
    <%= I18n.t 'request.request', count: :many %>
  <% end %>

  <%= c 'box' do %>
    <%= c 'stack', space: :xlarge do %>
      <% @requests.each do |request| %>
        <%= c 'excerpt', title: request.title, text: request.text, link: request_path(request), date: request.created_at %>
      <% end %>

      <%= c 'button', label: 'Neue Recherche', link: new_request_path %>
    <% end %>
  <% end %>
<% end %>
