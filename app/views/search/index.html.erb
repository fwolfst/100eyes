<%= c 'box', styles: [:large, :gray] do %>
  <%= c 'wrapper' do %>
    <%= c 'heading' do %>
      <%= I18n.t 'search.result', count: :many %>
    <% end %>
  <% end %>
<% end %>

<%= c 'box' do %>
  <%= c 'wrapper' do %>
    <%= c 'stack', space: :xlarge do %>
      <% @results.each do |result| %>
        <%= c 'search_result', result: result %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
